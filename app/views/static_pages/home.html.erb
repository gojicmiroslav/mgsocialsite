<div class="center jumbotron">
	<h1>MG Social Site</h1>

	<h2>
		This is Home page for Social Site.
	</h2>

	<% if user_signed_in? %>
		<%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-lg btn-primary" %>
		<%= link_to 'Edit', edit_user_registration_path, class: "btn btn-lg btn-primary" %>
	<% else %>
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-lg btn-primary" %>
			<%= link_to "Sign In", new_user_session_path, class: "btn btn-lg btn-primary" %>
	<% end %>
</div>

