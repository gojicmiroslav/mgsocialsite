<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">
		<div class="user-info">
			<%= render 'shared/user_info' %>	
		</div>
		<div class="micropost-form">
			<%= render 'shared/micropost_form' %>	
		</div>

		<% if current_user?(@user) %>
			<div class="btn-group btn-group-justified" role="group">
					<%= link_to(edit_user_registration_path, class: "btn btn-default btn-lg") do %>
						<span class='glyphicon glyphicon-user' aria-hidden='true'></span> Edit profile
					<% end %>

					<%= link_to(edit_user_registration_path, method: :delete, class: "btn btn-default btn-lg") do %>
						<span class='glyphicon glyphicon-log-out' aria-hidden='true'></span> Logout
					<% end %>
			</div>
		<% end %>
	</aside>

	<div class="col-md-6">
		<div class="row">
			<div class="panel panel-info panel-tweet">
				<%= render 'shared/stats' %>
			</div>
			<div class="list-group">
				<li class="list-group-item disabled">Tweets</li>
				<%= render @microposts %>
			</div>
		</div>

		<%= will_paginate(@microposts) %>
	</div>
</div>


