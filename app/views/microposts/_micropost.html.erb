<li id="micropost-<%= micropost.id %>" class="status">
	<%= link_to gravatar_for(micropost.user, size: 70), micropost.user %>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span class="content">
		<%= micropost.content %>
		<%= image_tag micropost.picture.url if micropost.picture? %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
		<% if current_user?(micropost.user) %>
			<span class="delete_panel admin">
			<%= link_to "delete", micropost, method: :delete, data: {confirm: "Are you shure?"}, class: "btn btn-danger" %>
			</span>
		<% end %>
	</span>
</li>